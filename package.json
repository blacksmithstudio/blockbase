    "serve:sandbox": "export NODE_ENV=sandbox && pm2 start start.js --name=blockbase",
    "test": "mocha --harmony-async-await"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:blacksmithstudio/blockbase.git"
  },
  "author": "Alexandre Pereira <alex@blacksmith.studio>",
  "license": "MIT",
  "dependencies": {
    "config": "^1.26.1",
    "joi": "^10.6.0",
    "js-yaml": "^3.8.4",
    "junk": "^2.1.0",
    "underscore": "^1.8.3"
  }
}
