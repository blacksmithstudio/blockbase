{
  "name": "@blacksmithstudio/blockbase",
  "version": "0.0.2",
  "description": "blockbase MVC node framework project",
  "main": "src/app.js",
  "scripts": {
    "dev": "export NODE_ENV=development && node --max_old_space_size=4096 --harmony-async-await start.js",
    "start": "export NODE_ENV=development && pm2 start start.js --node-args='--harmony-async-await' --name=blockbase",
    "serve:production": "export NODE_ENV=production && pm2 start start.js --node-args='--harmony-async-await' --name=blockbase",
    "serve:sandbox": "export NODE_ENV=sandbox && pm2 start start.js --node-args='--harmony-async-await' --name=blockbase",
    "test": "mocha --harmony-async-await"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:blacksmithstudio/blockbase.git"
  },
  "author": "Alexandre Pereira <alex@blacksmith.studio>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.2",
    "config": "^1.26.1",
    "express": "^4.15.3",
    "joi": "^10.6.0",
    "js-yaml": "^3.8.4",
    "junk": "^2.1.0",
    "moment": "^2.18.1",
    "multer": "^1.3.0",
    "pg": "^7.0.1",
    "request": "^2.81.0",
    "underscore": "^1.8.3"
  }
}
