{
  "name": "@blacksmithstudio/blockbase",
  "version": "0.1.2",
  "description": "blockbase MVC node framework project",
  "main": "src/app.js",
  "scripts": {
    "dev": "export NODE_ENV=development && node --max_old_space_size=4096 start.js",
    "start": "export NODE_ENV=development && pm2 start start.js --name=blockbase",
